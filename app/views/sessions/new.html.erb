<% provide(:title, "Log in") %>
<div class="self-center mx-auto max-w-sm w-full">
  <h1 class="font-bold text-4xl text-center">Log in</h1>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <div class="flex gap-2">
      <%= f.label :password %>
      <%= link_to "forgot password?", new_password_reset_path, class: 'ml-auto text-rose-300' %>
    </div>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :remember_me, class: "checkbox" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this device</span>
    <% end %>
    <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>
  <p>New
    user? <%= link_to "Sign up now!", signup_path, class: 'text-rose-700 font-medium ml-2' %></p>
</div>
